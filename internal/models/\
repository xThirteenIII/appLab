package models

import (
	"time"

	"go.mongodb.org/mongo-driver/bson/primitive"
)

// Reorder from lighter to heavier, for memory saving.
// The compiler adds “empty” bytes to align each field to its natural alignment boundary (which depends on the size of the type).
type Appliance struct {
	ID            primitive.ObjectID `bson:"_id,omitempty" json:"id"`
	Model         string             `bson:"model" json:"model"`
	Serial        string             `bson:"serial" json:"serial"`
	FWVersion     string             `bson:"fwVersion" json:"fwVersion"`
	Features      []string           `bson:"features" json:"features"`
	InLabCount    int                `bson:"inLabCount" json:"inLabCount"`
	Ready         bool               `bson:"ready" json:"ready"`
	UserStory     string             `bson:"userStory" json:"userStory"`
	TestExecution string             `bson:"testExecution" json:"testExecution"`
	Bugs          []string           `bson:"bugs" json:"bugs"`
	UpdatedAt     time.Time          `bson:"updatedAt" json:"updatedAt"`
}

